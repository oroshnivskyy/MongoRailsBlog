<h1>Login</h1>

<%= form_tag sessions_path do -%>

    <p>
      <%= label_tag :email, "Email or login" -%>
      <%= text_field_tag :email, params[:email] -%>
    </p>

    <p>
      <%= label_tag :password -%>
      <%= password_field_tag :password -%>
    </p>

    <div class="actions">
      <%= submit_tag "Login" %>
    </div>
<%- end -%>
